<div class="w-full min-h-[100vh]">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-gray-200 rounded-lg py-8">
    <h2 class="text-xl mb-4 text-center">Sign up as <%= resource_name %></h2>

    <div class="w-3/4 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :username, class: "mb-2 text-lg" %><br />
          <%= f.text_field :username, autofocus: true, class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :email, class: "mb-2 text-lg" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password, class: "mb-2 text-lg" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation, class: "mb-2 text-lg" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :address, class: "mb-2 text-lg" %><br />
          <%= f.text_field :address, class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :city, class: "mb-2 text-lg" %><br />
          <%= f.text_field :city, class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :state, class: "mb-2 text-lg" %><br />
          <%= f.text_field :state, class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :zip_code, class: "mb-2 text-lg" %><br />
          <%= f.text_field :zip_code, class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4">
          <%= f.label :country, class: "mb-2 text-lg" %><br />
          <%= f.text_field :country, class: "w-full rounded-lg bg-gray-50" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "bg-blue-500 w-full p-2 text-blue-100 rounded-lg cursor-pointer hover:bg-blue-700 hover:text-blue-300" %>
        </div>
      <% end %>

      <div class="flex flex-col items-center mt-4 gap-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
